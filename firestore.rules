rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user is admin
    function isAdmin() {
      return isAuthenticated() &&
        exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }

    // Helper function to check admin role
    function hasRole(role) {
      return isAdmin() &&
        get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.role == role;
    }

    // Admin users collection
    match /admins/{userId} {
      allow read: if isAuthenticated() && request.auth.uid == userId;
      allow write: if hasRole('super_admin');
    }

    // Categories collection
    match /categories/{categoryId} {
      allow read: if isAuthenticated();
      allow create, update, delete: if isAdmin();
    }

    // Auctions collection
    match /auctions/{auctionId} {
      allow read: if isAuthenticated();
      allow create: if isAdmin();
      allow update, delete: if isAdmin();

      // Vehicles subcollection within auctions
      match /vehicles/{vehicleId} {
        allow read: if isAuthenticated();
        allow create, update, delete: if isAdmin();
      }
    }

    // Standalone vehicles collection
    match /vehicles/{vehicleId} {
      allow read: if isAuthenticated();
      allow create, update, delete: if isAdmin();
    }

    // Properties collection
    match /properties/{propertyId} {
      allow read: if isAuthenticated();
      allow create, update, delete: if isAdmin();
    }

    // Property auctions collection
    match /property_auctions/{auctionId} {
      allow read: if isAuthenticated();
      allow create, update, delete: if isAdmin();
    }

    // Users collection (for managing app users)
    match /users/{userId} {
      allow read: if isAdmin();
      allow create, update: if isAdmin();
      allow delete: if hasRole('super_admin');
    }

    // Bids collection
    match /bids/{bidId} {
      allow read: if isAdmin();
      allow create: if isAuthenticated();
      allow update, delete: if isAdmin();
    }

    // News collection
    match /news/{newsId} {
      allow read: if true; // Public read
      allow create, update, delete: if isAdmin();
    }

    // Banners collection
    match /banners/{bannerId} {
      allow read: if true; // Public read
      allow create, update, delete: if isAdmin();
    }

    // KYC documents collection
    match /kyc_documents/{docId} {
      allow read: if isAdmin();
      allow create: if isAuthenticated();
      allow update, delete: if isAdmin();
    }

    // Loan applications collection
    match /loan_applications/{applicationId} {
      allow read: if isAdmin();
      allow create: if isAuthenticated();
      allow update, delete: if isAdmin();
    }

    // DSA applications collection
    match /dsa_applications/{applicationId} {
      allow read: if isAdmin();
      allow create: if isAuthenticated();
      allow update, delete: if isAdmin();
    }

    // Suggestions collection
    match /suggestions/{suggestionId} {
      allow read: if isAdmin();
      allow create: if isAuthenticated();
      allow update, delete: if isAdmin();
    }

    // Blog posts collection
    match /blog_posts/{postId} {
      allow read: if true; // Public read
      allow create, update, delete: if isAdmin();
    }

    // Settings collection
    match /settings/{settingId} {
      allow read: if isAuthenticated();
      allow write: if hasRole('super_admin');
    }

    // Audit logs collection (read-only for admins, system writes only)
    match /audit_logs/{logId} {
      allow read: if hasRole('super_admin');
      allow create: if isAdmin();
      allow update, delete: if false; // Never allow modification of audit logs
    }

    // Staff/Roles collection
    match /staff/{staffId} {
      allow read: if isAdmin();
      allow create, update, delete: if hasRole('super_admin');
    }

    match /roles/{roleId} {
      allow read: if isAdmin();
      allow write: if hasRole('super_admin');
    }
  }
}
